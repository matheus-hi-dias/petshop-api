generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}

model Users {
  id Int @id @default(autoincrement())
  email String @unique
  name String
  password String
  pets Pets[]

}

model Pets {
  id Int @id @default(autoincrement())
  name String
  species String
  age Int
  weight Int
  observation String
  user Users @relation(fields: [userId], references: [id])
  userId Int
  appointments Appointments[]
}

model Appointments {
  id Int @id @default(autoincrement())
  date String
  service String
  observation String
  pet Pets @relation(fields: [petId], references: [id])
  petId Int
}
